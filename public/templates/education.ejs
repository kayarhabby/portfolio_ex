<!-- education.ejs page start -->
<article id="education">
    <!--   *******  Education Section Starts  *******   -->
    <h2><%= t('education_title', { ns: 'education' }) %></h2>
    <section>
        <div class="content">
            <% t('education_entries', { ns: 'education' }).forEach(entry => { %>
                <div class="box">
                    <h4><%= entry.period %></h4>
                    <h3><%= entry.institution %></h3>
                    <p><%= entry.details %></p>
                </div>
            <% }) %>
        </div>

        <div id="carouselExampleCaptions" class="carousel slide carousel-container" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/polytech_nancy.png" class="d-block w-100" alt="polytech nancy image">
                </div>
                <div class="carousel-item">
                    <img src="/images/strasbourg_university.png" class="d-block w-100" alt="ufr mathÃ©matiques informatiques strasbourg">
                </div>
                <div class="carousel-item">
                    <img src="/images/inphb.jpg" class="d-block w-100" alt="inphb image">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>
    <!--   *******  Education Section Ends  *******   -->
</article>
<!-- education.ejs page end -->
