<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
    <link rel='stylesheet' href='/stylesheets/navbar.css'/>
    <link rel="stylesheet" href="/stylesheets/responsive.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <style>
        /* Masquer le contenu initialement */
        #desktop-content {
            display: none;
        }
        /* Afficher un message pour les mobiles/tablettes */
        #mobile-message {
            display: none;
            text-align: center;
            margin-top: 50px;
            font-size: 24px;
        }
    </style>
</head>
<body>

<div id="desktop-content">
    <div class="appDashboard">
        <!-- include Header -->
        <%- include("../public/templates/navDashboard.ejs") %>
        <!-- end include -->

        <div id="dashboard" class="dashboardContainer">
            <section class="dashboardItem">
                <p>Items</p>
                <button class="btn btn-success" id="addNew">Add new</button>
            </section>
            <section class="dashboardTab">
                <table class="table table-dark table-hover">
                    <thead id="tableHeader">
                    <!-- Headers will be dynamically injected here by JS -->
                    </thead>
                    <tbody id="tableBody">
                    <!-- Rows will be dynamically injected here by JS -->
                    </tbody>
                </table>
            </section>
        </div>

        <!-- include Footer -->
        <%- include("../public/templates/footer.ejs") %>
        <!-- end include -->
    </div>
</div>
<div id="mobile-message">
    <!-- Message pour les mobiles/tablettes -->
    <h1>This site is only available on desktop devices.</h1>
</div>
<!-- Script imports -->
<script src="/javascripts/navbar.js"></script>
<script src="/javascripts/common.js"></script>
<script>
    //détection de la largeur de l'écran
    if (window.innerWidth < 1024) {
        //masquer le contenu pour les mobiles/tablettes
        document.getElementById('desktop-content').style.display = 'none';
        //afficher le message pour les mobiles/tablettes
        document.getElementById('mobile-message').style.display = 'block';
    } else {
        //afficher le contenu pour les ordinateurs de bureau
        document.getElementById('desktop-content').style.display = 'block';
        //masquer le message pour les mobiles/tablettes
        document.getElementById('mobile-message').style.display = 'none';
    }
</script>
</body>
</html>
